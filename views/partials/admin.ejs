<div class="bg-white shadow rounded-lg p-6">
  <h2 class="text-2xl font-bold mb-4">Admin Panel</h2>
  <span class="mr-4">You are signed in as: <%= user.FirstName %> <%= user.LastName %></span>
  <div class="flex flex-col space-y-4">
    <div class="admin-actions bg-gray-100 p-4 rounded-lg">
      <h2 class="text-lg font-bold mb-2">Create User Account</h2>
      <form action="/api/users" method="post" class="flex flex-col space-y-2" id="user-form">
        <div class="flex flex-col space-y-1">
          <label for="firstname" class="text-sm font-medium">First Name:</label>
          <input type="text" id="firstname" name="firstname" class="p-2 border border-gray-300 rounded-lg" />
          <label for="lastname" class="text-sm font-medium">Last Name:</label>
          <input type="text" id="lastname" name="lastname" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <div class="flex flex-col space-y-1">
          <label for="email" class="text-sm font-medium">Email:</label>
          <input type="email" id="email" name="email" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <div class="flex flex-col space-y-1">
          <label for="password" class="text-sm font-medium">Password:</label>
          <input type="password" id="password" name="password" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <input type="submit" value="Create User" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" />
      </form>
    </div>
    <div class="admin-actions bg-gray-100 p-4 rounded-lg">
      <h2 class="text-lg font-bold mb-2">Create Course</h2>
      <form action="/api/courses" method="post" class="flex flex-col space-y-2" id="course-form">
        <div class="flex flex-col space-y-1">
          <label for="course-name" class="text-sm font-medium">Course Name:</label>
          <input type="text" id="course-name" name="courseName" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <div class="flex flex-col space-y-1">
          <label for="course-description" class="text-sm font-medium">Course Description:</label>
          <textarea id="course-description" name="courseDescription" class="p-2 border border-gray-300 rounded-lg"></textarea>
        </div>
        <div class="flex flex-col space-y-1">
          <label for="course-credits" class="text-sm font-medium">Course Credits:</label>
          <input type="number" id="course-credits" name="courseCredits" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <input type="submit" value="Create Course" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" />
      </form>
    </div>
    <div class="admin-actions bg-gray-100 p-4 rounded-lg">
      <h2 class="text-lg font-bold mb-2">Create Fee</h2>
      <form action="/api/fees" method="post" class="flex flex-col space-y-2" id="fee-form">
        <div class="flex flex-col space-y-1">
          <label for="fee-user" class="text-sm font-medium">Student ID:</label>
          <input type="text" id="feeUser" name="feeUser" class="p-2 border border-gray-300 rounded-lg" />
          <label for="fee-name" class="text-sm font-medium">Fee Name:</label>
          <input type="text" id="feeName" name="feeName" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <div class="flex flex-col space-y-1">
          <label for="fee-amount" class="text-sm font-medium">Fee Amount:</label>
          <input type="number" id="feeAmount" name="feeAmount" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <div class="flex flex-col space-y-1">
          <label for="fee-date" class="text-sm font-medium">Due Date:</label>
          <input type="date" id="feeDate" name="feeDate" class="p-2 border border-gray-300 rounded-lg" />
        </div>
        <input type="submit" value="Create Fee" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" />
      </form>
    </div>
  </div>
</div>

<!-- Modal for feedback -->
<div id="feedback-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h2 id="modal-title" class="text-lg font-bold"></h2>
    <p id="modal-message"></p>
    <button onclick="closeModal()" class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Close</button>
  </div>
</div>

<script src="/js/admin.js" defer></script> <!-- Link to the new JavaScript file -->
