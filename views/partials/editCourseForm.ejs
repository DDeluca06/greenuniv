<div class="bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-lg font-bold mb-4">Edit Course</h2>
    <form hx-post="/api/courses/update" hx-target="#edit-course-modal" hx-swap="outerHTML">
        <input type="hidden" name="courseId" value="<%= course.CourseID %>">

        <label class="block text-sm font-medium">Course Name:</label>
        <input type="text" name="courseName" value="<%= course.CourseName %>" 
               class="p-2 border rounded-lg w-full mb-2" required />

        <label class="block text-sm font-medium">Course Description:</label>
        <textarea name="courseDescription" 
                  class="p-2 border rounded-lg w-full mb-2" required><%= course.CourseDesc %></textarea>

        <label class="block text-sm font-medium">Course Credits:</label>
        <input type="number" name="courseCredits" value="<%= course.Credits %>" 
               class="p-2 border rounded-lg w-full mb-4" required />

        <div class="flex justify-end space-x-2">
            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                Save Changes
            </button>
            <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
                    onclick="document.getElementById('edit-course-modal').classList.add('hidden')">
                Cancel
            </button>
        </div>
    </form>
</div>
